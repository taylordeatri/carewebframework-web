 
<page name="page" title="CWF Test Harness"> 
	<messagewindow name="messagewindow" />
	
	<window title="CWF Component Tests" class="flavor:panel-primary" 
		controller="org.carewebframework.web.testharness.MainController">
		<tabview name="tabview" height="500px" tabPosition="left">
			<tab>
				<import src="pages/@intro.cwf" />
			</tab>
			
			<tab label="Angular" hint="${@msg.cwf.testharness.angular}">
				<import src="web/org/carewebframework/web/angular/example/pomodoro.cwf" />
			</tab>
			
			<tab label="Buttons" hint="${@msg.cwf.testharness.buttons}">
				<import src="pages/buttons.cwf" />
			</tab>
			
			<tab label="Chart" hint="${@msg.cwf.testharness.chart}">
				<import src="pages/chart.cwf" />
			</tab>
			
			<tab label="Conditionals" hint="${@msg.cwf.testharness.conditionals}">
				<import src="pages/conditionals.cwf" />
			</tab>
			
			<tab label="Drag &amp; Drop" hint="${@msg.cwf.testharness.dnd}">
				<import src="pages/dnd.cwf" />
			</tab>

			<tab label="EL Expressions" hint="${@msg.cwf.testharness.explang}">
				<import src="pages/explang.cwf" />
			</tab>
			
			<tab label="Grid" hint="${@msg.cwf.testharness.grids}">
				<import src="pages/grids.cwf" />
			</tab>
			
			<tab label="HTML" hint="${@msg.cwf.testharness.html}">
				<import src="pages/html.cwf" />
			</tab>
			
			<tab label="IFrame" hint="${@msg.cwf.testharness.iframe}">
				<import src="pages/iframe.cwf" />
			</tab>
			
			<tab name="tabInputBoxes" label="Input Boxes" hint="${@msg.cwf.testharness.boxes}">
				<import src="pages/boxes.cwf" />
			</tab>

			<tab label="Menus" hint="${@msg.cwf.testharness.menus}">
				<import src="pages/menus.cwf" />
			</tab>
			
			<tab label="Miscellaneous" hint="${@msg.cwf.testharness.misc}">
				<import src="pages/misc.cwf" />
			</tab>
			
			<tab label="Paneview" hint="${@msg.cwf.testharness.panes}">
				<import src="pages/panes.cwf" />
			</tab>

			<tab label="React" hint="${@msg.cwf.testharness.react}">
				<import src="web/org/carewebframework/web/react/example/pomodoro.cwf" />
			</tab>
			
			<tab label="Sandbox" hint="${@msg.cwf.testharness.sandbox}">
				<import src="web/org/carewebframework/web/sandbox/main.cwf" />
			</tab>
			
			<tab label="Scripts" hint="${@msg.cwf.testharness.scripts}">
				<import src="pages/scripts.cwf" />
			</tab>
			
			<tab label="Styles" selected="true" hint="${@msg.cwf.testharness.styles}">
				<import src="pages/styles.cwf" />
			</tab>
			
			<tab label="Subclassing" hint="${@msg.cwf.testharness.subclass}">
				<import src="pages/subclass.cwf" />
			</tab>
			
			<tab label="Tabview" hint="${@msg.cwf.testharness.tabs}">
				<import src="pages/tabs.cwf" />
			</tab>			
												
			<tab label="Template" hint="${@msg.cwf.testharness.template}">
				<import src="pages/templates.cwf" />
			</tab>
			
			<tab label="Timer" hint="${@msg.cwf.testharness.timer}">
				<import src="pages/timer.cwf" />
			</tab>
			
			<tab label="Tree" hint="${@msg.cwf.testharness.trees}">
				<import src="pages/trees.cwf" />
			</tab>
			
			<tab label="Window" hint="${@msg.cwf.testharness.windows}">
				<import src="pages/windows.cwf" />
			</tab>
									
		</tabview>
		
						
		<label label="Status log:" style="display:block"/>
		<memobox name="statusLog" height="100px" width="100%" readonly="true" autoScroll="true" />
		<toolbar width="100%" alignment="start">
			<button name="btnClearLog" label="Clear Log" />
			<checkbox name="chkScrollLock" label="Scroll Lock" checked="true" />
		</toolbar>
	</window>
</page>
